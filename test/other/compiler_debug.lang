function hash(this: String*): u64 {
    // Fowler–Noll–Vo hash function
    let h: u64 = 14695981039346656037; // FNV_offset_basis
    for (let i = 0u64; i < .length; ++i) {
        //const c: u64 = str.ptr[i];
        h = h ^ .ptr[i];
        h = h * 1099511628211; // FNV_prime
    }
    return h;
}

